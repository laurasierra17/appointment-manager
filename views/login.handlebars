<body>
  <header>
    <h1 class="mytitle">Appointment Manager</h1>
  </header>
  <section class="columns">
    <div class="column is-one-quarter middle">
      <div class="box">
        <h2 class="title is-4">Login</h2>
        <form id="form1">
          <div class="field">
            <label class="label">Username</label>
            <div class="control">
            </div>
            <input id="username" class="input" type="text" placeholder="Username">
          </div>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
            </div>
            <input id="password" class="input" type="password" placeholder="Password">
          </div>
          <button class="button is-info" id="loginbtn">Login</button>
        </form>
        <h2 class="title is-4">Sign Up</h2>
        <div class="field">
          <form id="form2">
            <label class="label">First Name</label>
            <div class="control">
            </div>
            <input id="firstname" class="input" type="text" placeholder="First name">
        </div>
        <div class="field">
          <label class="label">Last Name</label>
          <div class="control">
          </div>
          <input id="lastname" class="input" type="text" placeholder="Last name">
        </div>
        <div class="field">
          <label class="label">Username</label>
          <div class="control">
          </div>
          <input id="username2" class="input" type="text" placeholder="Username">
        </div>
        <div class="field">
          <label class="label">Password</label>
          <div class="control">
          </div>
          <input id="password2" class="input" type="password" placeholder="Password">
        </div>
        <button class="button is-info" id="signupbtn">Sign Up</button>
        </form>
      </div>
    </div>
  </section>

