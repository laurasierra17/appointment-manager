<header>
  <h1 class="mytitle">Appointment Sign Up</h1>
</header>


<section class="columns is-8">
  <div class="column is-two-fifths hey">
    <div class="box docard">
      <h3 class="appointmenthead">Create an Appointment</h3>
      <div id="d1" class="dropdown ddown">
        <div class="dropdown-trigger">
          <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
            <span id="doctor-span">Select a Doctor</span>
            <span class="icon is-small">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            {{#each doctor as |doc|}}
            <a href="#" class="dropdown-item doc-options" data-id="{{doc.id}}">
              {{doc.first_name}} {{doc.last_name}}
            </a>
            {{/each}}
          </div>
        </div>
      </div>
      <div id="d2" class="dropdown ddown">
        <div class="dropdown-trigger">
          <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
            <span id="time-span">Select a time</span>
            <span class="icon is-small">
              <i class="fas fa-angle-down"></i>
            </span>
          </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            <a href="#" class="dropdown-item time-option">
              9:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              10:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              11:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              12:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              1:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              2:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              3:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              4:00:00
            </a>
            <a href="#" class="dropdown-item time-option">
              5:00:00
            </a>
          </div>
        </div>
      </div>
      <p>Date: <input type="text" id="datepicker"></p>
      <textarea class="textarea" placeholder="Reason for visit" id="visit-reason"></textarea>
      <button id="appointment_submit" class="button is-link submitapp">Submit</button>
    </div>
  </div>
</section>

<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script src="/js/menu.js"></script>